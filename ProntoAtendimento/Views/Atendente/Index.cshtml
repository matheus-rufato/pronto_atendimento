@model List<Atendente>

<br />

@if (ViewBag.Message != null)
{
<div class="alert alert-danger">@ViewBag.Message</div>}



<h5>Lista de Atendentes</h5> 
<table class="table table-hover rounded-top rounded-bottom shadow">


    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Endereço</th>
        <th>Telefone</th>
        <th>Status</th>

    </tr>


    @foreach (var atend in Model) 
    {

    <tr>
    @if (@atend.Id != 1)
        {
        <td>@atend.Id</td>
        <td>@atend.Nome</td>
        
    <td>@atend.Endereco</td>
        <td>@atend.Telefone</td>
        <td>@atend.Status</td>}

        <td>
            @if (@atend.Id != 1)
            {
            <a class="btn btn-sm btn-danger" href="/atendente/delete/@atend.Id">Apagar</a>
            <a class="btn btn-sm btn-warning" href="/atendente/update/@atend.Id">Editar</a>}




        </td>
</tr>}
</table>
<a class="btn btn-info cart-btn-transform mt-2 float-right m-2" href="/atendente/create/">Adicionar</a>
<a class="btn btn-primary" href="/home/editar">Voltar</a>