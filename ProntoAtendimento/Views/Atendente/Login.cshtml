@model AtendenteViewModel

@if(ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}

<form asp-controller="Atendente" asp-action="Login" method="post" class="border-left border-right border-top border-bottom rounded shadow col-7 m-auto" style="background-color:lightsteelblue" >

    <div class="form-group text-center"> 
        <label class=" navbar-brand" >Login Atendente</label>
        <center><input asp-for="Login" class="form-control col-5 align-items-center" /></center>
        <span asp-validation-for="Login"></span>
    </div>

    <div class="form-group text-center">
        <label asp-for="Senha" class=" navbar-brand"></label>
        <center><input asp-for="Senha" class="form-control col-5 align-items-center" id="senha"/></center>
        <span asp-validation-for="Senha"></span>
        <input type="checkbox" onclick="mostrarSenha()" />Mostrar Senha
    </div>

    <center> <button class="btn btn-primary text-center">Entrar</button></center>
    <br>

</form>

<script>
    function mostrarSenha() {
        var tipo = document.getElementById("senha");
        if (tipo.type == "password") {
            tipo.type = "text";
        }
        else {
            tipo.type = "password";
        }


    }
</script>