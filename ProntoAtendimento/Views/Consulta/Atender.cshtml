@model List<Consulta>

@if (Model.Count == 0)
{
<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Consultas</h5>
                </div>
                <div class="card-body cart">
                    <div class="col-sm-12 empty-cart-cls text-center">
                        <h3><strong>Nenhuma Consulta no momento.</strong></h3>

                        <a href="/home" class="btn btn-danger" data-abc="true">Sair</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> }
else
{

<br />


                <h5>Consultas</h5>

                                <table class="table table-hover rounded-top rounded-bottom shadow">


                                    <tr>
                                        <th>Nr</th>
                                        <th>Paciente</th>
                                        <th>Médico(a)</th>
                                        <th>Data</th>
                                        <th>Situação</th>
                                    </tr>


                                    @foreach (var cons in Model)

                                    {
                    <tr>
                        <td>@cons.Nr</td>
                        <td>@cons.Paciente.Nome</td>
                        <td>@cons.Medico.Nome</td>
                        <td>@cons.Data</td>
                        <td>@cons.Status</td>

                        <td>

                            <a class="btn btn-info" href="/consulta/update/@cons.Nr">Atender</a>


                        </td>
                    </tr>}

                                </table>
                                                <a href="/home" class="btn btn-sm btn-danger m-3" data-abc="true">Sair</a>}
