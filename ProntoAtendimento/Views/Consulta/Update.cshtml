@model Consulta

<form asp-controller="Consulta" asp-action="Update" method="POST">

    <h5>Atendimento</h5>


    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control">
            <option value="1">Ativa</option>
            <option value="2">Encerrada</option>
            <option value="3">Aberta</option>
        </select>
    </div>


    <div class="form-group">
        <label>Diagnsotico</label>
        <input asp-for="Diagnostico" class="form-control" />
        <span asp-validation-for="Diagnostico"></span>
    </div>


    <div class="form-group">
        <button class="btn btn-outline-secondary">Atualizar Consulta</button>
    </div>
</form>

<a class="btn btn-info  cart-btn-transform mt-2 float-right m-2" href="/procedimento/selection">Procedimentos</a>
    





