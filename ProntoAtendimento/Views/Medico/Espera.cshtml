@model List<Consulta>

@if (Model.Count == 0)
{
    <div class="container-fluid mt-100">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Procedimentos</h5>
                    </div>
                    <div class="card-body cart">
                        <div class="col-sm-12 empty-cart-cls text-center">
                            <h3><strong>Nenhuma Consulta aberta.</strong></h3>
                            <button class="btn btn-primary">
                                Escolher Procedimentos
                            </button>
                            <a href="/home" class="btn btn-sm btn-danger m-3" data-abc="true">Sair</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
}
else
{
    <div class="container-fluid mt-100">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Procedimentos Utilizados</h5>
                    </div>
                    <div>
                        <table class="table table-hover">
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Tipo</th>
                                <th>Valor</th>

                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Nr</td>
                                    <td>@item.Data</td>
                                    <td>@item.Diagnostico</td>
                                    

                                    <td>
                                        <a class="btn btn-sm btn-danger" href="/Procedimento/Selection/@item.Nr" onclick="removidoBox()">
                                            Escolher Consulta
                                        </a>
                                        <a class="btn btn-sm btn-danger" href="/Consulta/Update/@item.Nr" onclick="removidoBox()">
                                            Atualizar Consulta
                                        </a>
                                    </td>
                                </tr>}
                        </table>
                    </div>
                </div>
                
                <a href="/home" class="btn btn-primary cart-btn-transform mt-2 float-right"
                   data-abc="true">Sair </a>
            </div>
        </div>
    </div>

                <script>function removidoBox() {
            alert("Item Removido Com Sucesso!");
        }</script>}