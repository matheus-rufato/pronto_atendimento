@model Paciente

<br />

@if (@Model == null)
{
    <h3>@ViewBag.Mensagem</h3>
}
else
{
    <h3>@ViewBag.Mensagem @Model.Nome</h3>
    <table class="table table-hover">
        <tr>
            <td>@Model.Nome</td>
            <td>@Model.Endereco</td>
            <td>@Model.Telefone</td>
            <td>@Model.Convenio</td>
            <td>
                <a class="btn btn-sm btn-warning"
                   href="paciente/update/@Model.Id">Editar</a>
            </td>
            <td>
                <a class="btn btn-primary"
                   href="paciente/create">Novo</a>
            </td>
        </tr>
    </table>
}
<a class="btn btn-primary" href="paciente/create">Adicionar</a>