@model List<Procedimento>

@{

    ViewData["Title"] = "Produto - Index";
}


@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}

<h5>Lista de Procedimentos</h5>

<table class="table table-hover rounded-top rounded-bottom shadow">

    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Tipo</th>
        <th>Valor</th>

    </tr>
    @foreach (var proced in Model)

    {
        <tr>
            <td>@proced.IdProcedimento</td>
            <td>@proced.Nome</td>
            <td>@proced.Tipo</td>
            <td>@proced.Valor</td>

            <td>
                <a class="btn btn-sm btn-danger" href="/procedimento/delete/@proced.IdProcedimento">Apagar</a>
                <a class="btn btn-sm btn-warning" href="/procedimento/update/@proced.IdProcedimento">Editar</a>


            </td>

        </tr>
    }
</table>
<a class="btn btn-info cart-btn-transform mt-2 float-right m-2" href="/procedimento/create/">Adcionar</a>
<a class="btn btn-primary" href="/home/editar">Voltar</a>
